[flake8]
ignore = W503, C901, ANN101
max-line-length = 88
max-complexity = 10
docstring-convention = google
allow-star-arg-any = true

per-file-ignores =
    # missing params in docstring
    main.py: DAR101
    # Don't require docstrings or type annotations in tests
    tests/*:D100,D102,D103,D104,DAR,ANN
